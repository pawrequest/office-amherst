[Version]
signature="$WINDOWS NT$"
Class=USB
ClassGuid={36fc9e60-c465-11cf-8056-444553540000}
Provider=%Provider%
DriverVer=09/08/2017,5.38.10.0
CatalogFile=bkrwbl.cat

[ControlFlags]
ExcludeFromSelect = *

;-----------------------------------------------------------------------------
; Specify target paths...
;-----------------------------------------------------------------------------
[DestinationDirs]
DefaultDestDir = 11     ; LDID_SYS
CopyList.sys.NT = 12

;-----------------------------------------------------------------------------
; Specify the install disks.
;-----------------------------------------------------------------------------
[SourceDisksNames.x86]
; diskid = description[, [tagfile] [, <unused>, subdir]]
1=%DiskDescription%, "bkrwbl.sys",,\i386

[SourceDisksNames.amd64]
; diskid = description[, [tagfile] [, <unused>, subdir]]
1=%DiskDescription%, "bkrwbl.sys",,\amd64

[SourceDisksFiles]
; filename = diskid[,[ subdir][, size]]
bkrwbl.sys = 1, ,
bkrwwhnt.sys = 1, ,

;-----------------------------------------------------------------------------
; Table of Contents:  manufacturer, then devices.
;-----------------------------------------------------------------------------
; Table of Contents
[Manufacturer]
%Mfg%=Digital, NTamd64

;-----------------------------------------------------------------------------
; The devices
;-----------------------------------------------------------------------------
[Digital]
%ProductDesc% = Install, USB\VID_238B&PID_0AA0
%ProductDesc% = Install, USB\VID_8765&PID_1234

[Digital.NTamd64]
%ProductDesc% = Install, USB\VID_238B&PID_0AA0
%ProductDesc% = Install, USB\VID_8765&PID_1234

;-----------------------------------------------------------------------------
;       How to install the driver
;-----------------------------------------------------------------------------
[Install.NT]
CopyFiles       = CopyList.sys.NT
AddReg          = AddReg.NT,AddReg

;-----------------------------------------------------------------------------
;       How to start the WDM driver on NT
;-----------------------------------------------------------------------------
[Install.NT.Services]
AddService = bkrwbl, 0x00000002, Install.AddService

[Install.AddService]
DisplayName     = %SvcDesc%
ServiceType     = 1                     ;SERVICE_KERNEL_DRIVER
StartType       = 3                     ;SERVICE_DEMAND_START
ErrorControl    = 1                     ;SERVICE_ERROR_NORMAL
ServiceBinary   = %12%\bkrwbl.sys

;-----------------------------------------------------------------------------
;       Registry entries
;-----------------------------------------------------------------------------
[AddReg]


[AddReg.NT]
HKR,,PublishedDeviceName, 0x00000000, "usbbulk$###"
HKR,,UseInstanceNumberForSymLink, 0x10001, 01,00,00,00
HKR,,EnableCR15307, 0x10001, 01,00,00,00
HKR,,SavedInstanceNumber, 0x10001, 00,00,00,00

;-----------------------------------------------------------------------------
;       Copy lists
;-----------------------------------------------------------------------------
; these are different so things go to a different place
[CopyList.sys.NT]
bkrwbl.sys
bkrwwh.sys,bkrwwhnt.sys

;-----------------------------------------------------------------------------
; STRINGS
;-----------------------------------------------------------------------------
[Strings]

;BEGIN ENG - US English Strings

Provider = "Digital Radio Solution Provider"
Mfg = "Digital Radio Solution Provider"
DiskDescription = "USB Bulk Device Installation Disk"

ProductDesc = "USB Bulk Device"
SvcDesc = "USB Bulk Device"

CustomerDataPath = "Digital USB Driver"
DriverSet = "Digital USB Driver Software"
UninstallFile = "BKRWUninstall.exe"
McciOptions = "Uninstallable"


;END ENG - US English Strings

