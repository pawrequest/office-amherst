;-----------------------------------------------------------------------------
; Installation instructions
;-----------------------------------------------------------------------------

[Digital.Install.nt]
AddReg		= Digital.AddReg,Digital.NT.AddReg
CopyFiles	= CopyFiles, CopyFiles.Win2K


;-----------------------------------------------------------------------------
;  Registry
;-----------------------------------------------------------------------------

; common registry entries 
[Digital.AddReg]
HKR,,EnableSetClearFeatureIdle, 0x10001, 01,00,00,00
HKR,,OverrideDefaultPortSettings, 0x10001, 01,00,00,00
HKR,,InitialBaudRate, 0x10001, 00,C2,01,00			;115200 initial baud rate
HKR,,InitialLineControl,, "8N1"					;8-bits, No parity, 1 stop bit

; only for NT...
[Digital.NT.AddReg]
HKR,,EnumPropPages32,,"MsPorts.dll,SerialPortPropPageProvider"
HKR,,AllowSuspendWhileOpen, 0x10001, 00,00,00,00
HKR,,EnableSelectiveSuspend, 0x10001, 00, 00, 00, 00
HKR,,EnableCR3840, 0x10001, 01,00,00,00
HKR,,AllowRemoteWakeup, 0x10001, 01,00,00,00

;-----------------------------------------------------------------------------
;  Copy lists
;-----------------------------------------------------------------------------
[CopyFiles]

[CopyFiles.Win2K]
bkrwmgmt.sys
bkrwcm.sys,bkrwcmnt.sys
bkrwcmnt.sys



;-----------------------------------------------------------------------------
;  NT Services installation
;-----------------------------------------------------------------------------



[Digital.Install.NT.Services]
AddService = bkrwmgmt, 0x00000002, Digital.Install.AddService, DigitalWdm.Install.EventLog




[Digital.Install.AddService]
DisplayName	= %Digital.Service.Name%
Description	= %Digital.Service.Desc%
ServiceType	= 1			;%SERVICE_KERNEL_DRIVER%
StartType	= 3			;%SERVICE_DEMAND_START%
ErrorControl	= 1			;%SERVICE_ERROR_NORMAL%	
ServiceBinary	= %12%\bkrwmgmt.sys


;-----------------------------------------------------------------------------
;       Event logging support
;-----------------------------------------------------------------------------

[DigitalWdm.Install.EventLog]
Addreg = DigitalWdm.EventLog.AddReg

[DigitalWdm.EventLog.AddReg]
HKR,,EventMessageFile, 0x20000, "%%SystemRoot%%\System32\drivers\bkrwmgmt.sys"
HKR,,TypesSupported, 0x10001, 7

