[version]
signature="$WINDOWS NT$"
Class=USB
ClassGuid={36FC9E60-C465-11CF-8056-444553540000}
Provider=%Provider%
DriverVer=09/08/2017,5.38.10.0
CatalogFile=bkrwbus.cat

[ControlFlags]
ExcludeFromSelect = *

;-----------------------------------------------------------------------------
; Specify target paths...
;-----------------------------------------------------------------------------
[DestinationDirs]
DefaultDestDir                  = 11                    ; LDID_SYS
DigitalWdm.NT.CopyFiles        = 12                    ; system32\drivers
PropPages.CopyFiles             = 11                    ; system

;-----------------------------------------------------------------------------
; Specify the install disks.  A bit unwieldy during development.
;-----------------------------------------------------------------------------
[SourceDisksNames.x86]
; diskid = description[, [tagfile] [, <unused>, subdir]]
1=%DiskString%,"bkrwbus.sys",,\i386


[SourceDisksNames.amd64]
; diskid = description[, [tagfile] [, <unused>, subdir]]
1=%DiskString%,"bkrwbus.sys",,\amd64



[SourceDisksFiles]
; filename = diskid[, [subdir] [, size]]
bkrwbus.sys = 1
bkrwwhnt.sys = 1

;-----------------------------------------------------------------------------
; Table of Contents:  manufacturer, then devices.
;-----------------------------------------------------------------------------
[Manufacturer]
%Digital%=Digital, NTamd64

;-----------------------------------------------------------------------------
; The devices
;-----------------------------------------------------------------------------
[Digital]
%Digital.CdcBus.Desc% = DigitalWdm.Install, USB\VID_238b&PID_0a11
%Digital.CdcBus.Desc% = DigitalWdm.Install, USB\VID_238b&PID_0a12
%Digital.CdcBus.Desc% = DigitalWdm.Install, USB\VID_238b&PID_0a21
%Digital.CdcBus.Desc% = DigitalWdm.Install, USB\VID_238b&PID_0a22
%Digital.CdcBus.Desc% = DigitalWdm.Install, USB\VID_238b&PID_0a31
%Digital.CdcBus.Desc% = DigitalWdm.Install, USB\VID_238b&PID_0a32
%Digital.CdcBus.Desc% = DigitalWdm.Install, USB\VID_238b&PID_0a41
%Digital.CdcBus.Desc% = DigitalWdm.Install, USB\VID_238b&PID_0a42
%Digital.CdcBus.Desc% = DigitalWdm.Install, USB\VID_238b&PID_0a51
%Digital.CdcBus.Desc% = DigitalWdm.Install, USB\VID_238b&PID_0a52

[Digital.NTamd64]
%Digital.CdcBus.Desc% = DigitalWdm.Install, USB\VID_238b&PID_0a11
%Digital.CdcBus.Desc% = DigitalWdm.Install, USB\VID_238b&PID_0a12
%Digital.CdcBus.Desc% = DigitalWdm.Install, USB\VID_238b&PID_0a21
%Digital.CdcBus.Desc% = DigitalWdm.Install, USB\VID_238b&PID_0a22
%Digital.CdcBus.Desc% = DigitalWdm.Install, USB\VID_238b&PID_0a31
%Digital.CdcBus.Desc% = DigitalWdm.Install, USB\VID_238b&PID_0a32
%Digital.CdcBus.Desc% = DigitalWdm.Install, USB\VID_238b&PID_0a41
%Digital.CdcBus.Desc% = DigitalWdm.Install, USB\VID_238b&PID_0a42
%Digital.CdcBus.Desc% = DigitalWdm.Install, USB\VID_238b&PID_0a51
%Digital.CdcBus.Desc% = DigitalWdm.Install, USB\VID_238b&PID_0a52

;-----------------------------------------------------------------------------
; How to install them:  
; On NT, the system first tries [section.NT], then [section].
;-----------------------------------------------------------------------------

;-----------------------------------------------------------------------------
; Diagnostics Files CopyFiles List Section
;-----------------------------------------------------------------------------
[Digital.CopyFiles]

;-----------------------------------------------------------------------------
; XXX when we have a property page DLL, add it to the following section.
;-----------------------------------------------------------------------------
[PropPages.CopyFiles]


;-----------------------------------------------------------------------------
;       How to install the WDM driver on NT
;-----------------------------------------------------------------------------
[DigitalWdm.Install.NT]
CopyFiles       = DigitalWdm.NT.CopyFiles
AddReg          = DigitalWdm.AddReg, DigitalWdm.NT.AddReg

;-----------------------------------------------------------------------------
;       How to start the WDM driver on NT
;-----------------------------------------------------------------------------



[DigitalWdm.Install.NT.Services]
AddService      = bkrwbus, 2, DigitalWdm.AddService, DigitalWdm.Install.EventLog

[DigitalWdm.AddService]
DisplayName             = %Digital.Service.Desc%
ServiceType             = 1     ; SERVICE_KERNEL_DRIVER
StartType               = 3     ; SERVICE_DEMAND_START
ErrorControl            = 1     ; SERVICE_ERROR_NORMAL
ServiceBinary           = %12%\bkrwbus.sys
LoadOrderGroup          = Base

;-----------------------------------------------------------------------------
;       Setup event logging, if driver supports it
;-----------------------------------------------------------------------------

[DigitalWdm.Install.EventLog]
Addreg = DigitalWdm.EventLog.AddReg

[DigitalWdm.EventLog.AddReg]
HKR,,EventMessageFile, 0x20000, "%%SystemRoot%%\System32\drivers\bkrwbus.sys"
HKR,,TypesSupported, 0x10001, 7


;-----------------------------------------------------------------------------
;       WDM registry entries (all platforms)
;-----------------------------------------------------------------------------
[DigitalWdm.AddReg]



;-----------------------------------------------------------------------------
;       WDM registry entries (NT only)
;-----------------------------------------------------------------------------
[DigitalWdm.NT.AddReg]
HKR,,EnableSelectiveSuspend, 0x10001, 00, 00, 00, 00
HKR,,EnableCR3840, 0x10001, 01,00,00,00
HKR,,AllowRemoteWakeup, 0x10001, 01,00,00,00
HKR,,MultipleInstancePolicy, 0x10001, 01,00,00,00
HKR,,EnableRndisBug12630Workaround, 0x10001, 01, 00, 00, 00


;-----------------------------------------------------------------------------
;       The WDM copy list for NT -- different because things go in
;       different places.
;-----------------------------------------------------------------------------
[DigitalWdm.NT.CopyFiles]
bkrwbus.sys
bkrwwh.sys,bkrwwhnt.sys
bkrwwhnt.sys


